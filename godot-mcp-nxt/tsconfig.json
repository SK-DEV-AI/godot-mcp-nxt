{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "server/dist",
    "rootDir": "server/src",
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "jest"]
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules"]
}