# Godot MCP Server Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Global log level (ERROR, WARN, INFO, DEBUG, TRACE)
LOG_LEVEL=INFO

# Component-specific log levels (overrides global level)
LOG_LEVEL_CONNECTION=INFO
LOG_LEVEL_WEBSOCKET=INFO
LOG_LEVEL_COMMAND=INFO
LOG_LEVEL_PERFORMANCE=INFO
LOG_LEVEL_TOOL=INFO
LOG_LEVEL_CACHE=INFO
LOG_LEVEL_ERROR=ERROR

# Enable debug mode (shortcut for LOG_LEVEL=DEBUG)
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# WebSocket server port
GODOT_WS_PORT=9080

# Connection timeout (milliseconds)
CONNECTION_TIMEOUT=20000

# Maximum connection retries
MAX_RETRIES=3

# Retry delay (milliseconds)
RETRY_DELAY=2000

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Cache cleanup interval (milliseconds)
CACHE_CLEANUP_INTERVAL=300000

# Maximum cache size (entries)
MAX_CACHE_SIZE=1000

# Async queue processing interval (milliseconds)
QUEUE_PROCESS_INTERVAL=100

# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=10

# =============================================================================
# DEBUG FEATURES
# =============================================================================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable detailed error reporting
ENABLE_DETAILED_ERRORS=true

# Enable request/response logging
ENABLE_REQUEST_LOGGING=false

# Enable WebSocket message tracing
ENABLE_WS_TRACING=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable hot reload (development only)
HOT_RELOAD=false

# Enable test mode
TEST_MODE=false

# Mock Godot connection for testing
MOCK_GODOT_CONNECTION=false